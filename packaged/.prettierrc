{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ],
  "useTabs": true,
  "arrowParens": "avoid",
  "printWidth": 120,
  "tabWidth": 4
}
